<div class="columns is-centered">
	<div class="column is-6">
		<h2 class="title is-3">Edit place</h2>
		<hr>
		<div class="box">
			<form action="/edit?placeid={{this._id}}" method="POST">
			<div class="field">
				<label class="label">Name:</label>
				<div class="control has-icons-left has-icons-right">
					<input value="{{name}}" class="input" type="text" name="name" >
					<span class="icon is-small is-left">
					</span>
				</div>	
			</div>
			<div class="field">
				<label class="label">Address:</label>
				<div class="control has-icons-left has-icons-right">
					<input value="{{address}}" id="address" class="input" type="text" name="address">
					<span class="icon is-small is-left">
					</span>
				</div>
			</div>
			<div class="field">
				<label class="label">Longitud:</label>
				<div class="control has-icons-left has-icons-right">
					<input value="{{lng}}" id="lng" class="input" type="text" name="lng">
					<span class="icon is-small is-left">
					</span>
				</div>
			</div>

			<div class="field">
				<label class="label">Latitude:</label>
				<div class="control has-icons-left has-icons-right">
					<input value="{{lat}}" id="lat" class="input" type="text" name="lat">
					<span class="icon is-small is-left">
					</span>
				</div>
			</div>

			<div class="buttons is-right">
				<button type="submit" value="create" class="button is-fullwidth is-success is-hovered">
					<span>Update place</span>
				</button>
			</div>
		</form>
		</div>
	</div>
</div>